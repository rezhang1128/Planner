<div class="container mt-4">
  <h1 class="text-center mb-4">Travel Planner</h1>

  <!-- Input Destinations -->
  <div class="card mb-4">
    <div class="card-body">
      <form id="destination-form" class="row g-3">
        <div class="col-md-6">
          <input type="text" class="form-control location-input" placeholder="Enter destination" required="">
        </div>
        <div class="col-md-2">
          <button type="button" class="btn btn-secondary add-destination">Add</button>
        </div>
        <div class="col-md-4 d-grid">
          <button type="submit" class="btn btn-primary">Generate Plan</button>
        </div>
      </form>
    </div>
  </div>

  <!-- List of Destinations -->
  <ul class="list-group mb-4" id="destination-list">
  </ul>

  <!-- Map Display -->
  <div class="mb-4">
    <div id="map" class="rounded shadow-sm" style="height: 500px; width: 100%;"></div>
  </div>

  <!-- Route Details Display -->
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Route Details</h5>
      <div id="directions-panel"></div>
    </div>
  </div>
</div>
